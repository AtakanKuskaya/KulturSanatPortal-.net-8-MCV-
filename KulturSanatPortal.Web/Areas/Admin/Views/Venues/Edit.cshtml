@model KulturSanatPortal.Web.Areas.Admin.Controllers.Models.VenueFormVM
@{
    ViewData["Title"] = "Salon Düzenle";
    string ImgSrc() => string.IsNullOrWhiteSpace(Model.ExistingImage)
        ? "https://picsum.photos/seed/venue/800/450"
        : Url.Content(Model.ExistingImage!);
}
<form method="post" enctype="multipart/form-data" class="card-admin p-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="form-grid">
                <div class="full">
                    <label class="form-label">Adı</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div>
                    <label class="form-label">Slug</label>
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug" class="text-danger small"></span>
                </div>
                <div>
                    <label class="form-label">Kapasite</label>
                    <input asp-for="Capacity" type="number" class="form-control" />
                </div>

                <div class="full">
                    <label class="form-label">Adres</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div>
                    <label class="form-label">İlçe</label>
                    <input asp-for="District" class="form-control" />
                </div>
                <div>
                    <label class="form-label">Telefon</label>
                    <input asp-for="Phone" class="form-control" />
                </div>

                <div>
                    <label class="form-label">E-posta</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
                <div>
                    <label class="form-label">Harita (Embed URL)</label>
                    <input asp-for="MapEmbedUrl" class="form-control" placeholder="https://..." />
                </div>

                <div class="full">
                    <label class="form-label">Açıklama (HTML)</label>
                    <textarea asp-for="DescriptionHtml" rows="8" class="form-control"></textarea>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Kaydet</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
                <a class="btn btn-outline-secondary" asp-area="" asp-controller="Venues" asp-action="Details" asp-route-slug="@Model.Slug" target="_blank">Önizle</a>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="uploader">
                <label class="form-label">Salon Görseli</label>
                <div class="preview-hero mb-2">
                    <img id="imgPreview" src="@ImgSrc()" alt="Görsel" />
                </div>
                <input type="file" name="image" accept=".jpg,.jpeg,.png,.webp,.avif" id="imgInput" />

                @if (!string.IsNullOrWhiteSpace(Model.ExistingImage))
                {
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" name="deleteImage" id="deleteImage">
                        <label class="form-check-label" for="deleteImage">Mevcut görseli sil</label>
                    </div>
                }
                <div class="help mt-1">Önerilen oran 16:9 — Maks 8MB</div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(iId, imgId){
            const i = document.getElementById(iId), img = document.getElementById(imgId);
            if(!i || !img) return;
            i.addEventListener('change', e=>{
                const f = i.files?.[0]; if(!f) return;
                const r = new FileReader();
                r.onload = ev => img.src = ev.target.result;
                r.readAsDataURL(f);
            });
        })('imgInput','imgPreview');
    </script>
}
