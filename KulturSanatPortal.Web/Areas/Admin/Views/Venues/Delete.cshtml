@model KulturSanatPortal.Domain.Entities.Venue
@{
    ViewData["Title"] = "Salon Sil";
}
<div class="card-admin p-3">
    <h1 class="h5 mb-2">Salon Sil</h1>
    <p class="text-muted">Aşağıdaki salon kaydı silinecek. Onaylıyor musunuz?</p>

    <dl class="row">
        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Slug</dt>
        <dd class="col-sm-10">@Model.Slug</dd>
        <dt class="col-sm-2">Kapasite</dt>
        <dd class="col-sm-10">@(@Model.Capacity?.ToString() ?? "-")</dd>
        <dt class="col-sm-2">İlçe</dt>
        <dd class="col-sm-10">@(!string.IsNullOrWhiteSpace(Model.District) ? Model.District : "-")</dd>
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@(!string.IsNullOrWhiteSpace(Model.Phone) ? Model.Phone : "-")</dd>
    </dl>

    <form method="post" asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Sil</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
    </form>
</div>
