@{
    var userName = User?.Identity?.IsAuthenticated == true ? User.Identity.Name : "Kullanıcı";
}
<nav class="navbar navbar-expand-lg bg-white">
    <div class="container-fluid">
        <button class="btn btn-outline-secondary me-2 d-lg-none" type="button" onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>
        <button class="btn btn-outline-secondary me-2 d-none d-lg-inline-flex" type="button" onclick="toggleSidebar()" title="Kenar çubuğunu daralt">
            <i class="bi bi-layout-sidebar-inset"></i>
        </button>

        <a class="navbar-brand fw-semibold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
            <i class="bi bi-stars text-primary"></i> Kültür &amp; Sanat · Admin
        </a>

        <div class="ms-auto d-flex align-items-center gap-2">
            <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
                <i class="bi bi-box-arrow-up-right me-1"></i> Siteyi Aç
            </a>

            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle me-1"></i> @userName
                </button>
                <div class="dropdown-menu dropdown-menu-end shadow">
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2 me-1"></i> Panel
                    </a>
                    <div class="dropdown-divider"></div>
                    <form method="post" asp-area="Auth" asp-controller="Account" asp-action="Logout" class="px-3 py-2">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-danger btn-sm w-100" type="submit"><i class="bi bi-box-arrow-right me-1"></i> Çıkış</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</nav>
