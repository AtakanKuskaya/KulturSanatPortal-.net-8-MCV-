@model KulturSanatPortal.Web.Areas.Admin.Models.EventFormVM
@{
    ViewData["Title"] = "Etkinlik Ekle";
    var catList = (IEnumerable<KulturSanatPortal.Domain.Entities.EventCategory>)ViewBag.Categories;
    var venList = (IEnumerable<KulturSanatPortal.Domain.Entities.Venue>)ViewBag.Venues;
}
<form method="post" enctype="multipart/form-data" class="card-admin p-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="form-grid">
                <div class="full">
                    <label class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div>
                    <label class="form-label">Slug <span class="help">(boşsa otomatik)</span></label>
                    <input asp-for="Slug" class="form-control" />
                </div>
                <div>
                    <label class="form-label">Kategori</label>
                    <select asp-for="CategoryId" asp-items="@(new SelectList(catList, "Id", "Name"))" class="form-select"></select>
                </div>

                <div>
                    <label class="form-label">Salon</label>
                    <select asp-for="VenueId" asp-items="@(new SelectList(venList, "Id", "Name"))" class="form-select"></select>
                </div>
                <div>
                    <label class="form-label">Bilet Linki</label>
                    <input asp-for="TicketUrl" class="form-control" />
                </div>

                <div class="full">
                    <label class="form-label">Özet</label>
                    <input asp-for="Summary" class="form-control" />
                </div>
                <div class="full">
                    <label class="form-label">Açıklama</label>
                    <textarea asp-for="DescriptionHtml" rows="8" class="form-control"></textarea>
                </div>

                <div>
                    <label class="form-label">Başlangıç</label>
                    <input asp-for="StartLocal" type="datetime-local" class="form-control" />
                </div>
                <div>
                    <label class="form-label">Bitiş</label>
                    <input asp-for="EndLocal" type="datetime-local" class="form-control" />
                </div>

                <div>
                    <label class="form-label">Fiyat Bilgisi</label>
                    <input asp-for="PriceInfo" class="form-control" />
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsPublished" />
                        <label class="form-check-label" asp-for="IsPublished">Yayınla</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsFeatured" />
                        <label class="form-check-label" asp-for="IsFeatured">Öne Çıkar</label>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Kaydet</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Kapak -->
            <div class="uploader mb-3">
                <label class="form-label">Kapak Görseli</label>
                <div class="preview-hero mb-2">
                    <img id="heroPreview" src="https://picsum.photos/seed/hero/800/450" alt="Kapak" />
                </div>
                <input type="file" name="hero" accept=".jpg,.jpeg,.png,.webp,.avif" id="heroInput" />
                <div class="help mt-1">Önerilen oran 16:9 — Maks 8MB</div>
                <span class="text-danger small" asp-validation-for="ExistingHero"></span>
            </div>

            <!-- Galeri -->
            <div class="uploader">
                <label class="form-label">Galeri (çoklu)</label>
                <input type="file" name="gallery" multiple accept=".jpg,.jpeg,.png,.webp,.avif" />
                <div class="help mt-1">Birden fazla seçebilirsiniz.</div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>bindHeroPreview('heroInput','heroPreview');</script>
}
