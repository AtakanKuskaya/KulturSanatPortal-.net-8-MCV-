@model IEnumerable<KulturSanatPortal.Domain.Entities.Event>
@{
    ViewData["Title"] = "Etkinlikler";
    var total = (int)(ViewBag.Total ?? 0);
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var totalPages = Math.Max(1, (int)Math.Ceiling((double)total / Math.Max(1, pageSize)));
}

<div class="card-admin p-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="d-flex align-items-center gap-2">
            <strong>Etkinlikler</strong>
            <span class="badge badge-soft">Toplam @total</span>
        </div>
        <a class="btn btn-primary btn-sm" asp-action="Create"><i class="bi bi-plus"></i> Yeni</a>
    </div>

    <div class="table-responsive">
        <table class="table table-modern align-middle">
            <thead>
                <tr>
                    <th style="width:80px;">Kapak</th>
                    <th>Başlık</th>
                    <th>Başlangıç</th>
                    <th>Salon</th>
                    <th>Durum</th>
                    <th style="width:120px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr><td colspan="6" class="text-center text-muted py-4">Kayıt yok.</td></tr>
                }
                else
                {
                    foreach (var e in Model)
                    {
                        var startLocal = TimeZoneInfo.ConvertTimeFromUtc(e.StartUtc, TimeZoneInfo.Local);
                        var cover = !string.IsNullOrWhiteSpace(e.HeroImagePath)
                        ? Url.Content(e.HeroImagePath)
                        : "https://picsum.photos/seed/event/160/90";
                        <tr>
                            <td>
                                <img src="@cover" alt="" style="width:72px;height:44px;object-fit:cover;border-radius:8px;" loading="lazy">
                            </td>
                            <td class="text-truncate" style="max-width:380px;">@e.Title</td>
                            <td>@startLocal:g</td>
                            <td>@e.Venue?.Name</td>
                            <td>
                                @if (e.IsPublished)
                                {
                                    <span class="badge text-bg-success">Yayında</span>
                                }
                                else
                                {

                                    <span class="badge text-bg-secondary">Taslak</span>
                                }
                                @if (e.IsFeatured)
                                {
                                    <span class="badge text-bg-warning">Öne Çıkan</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@e.Id" title="Düzenle"><i class="bi bi-pencil"></i></a>
                                    <a class="btn btn-outline-secondary" asp-area="" asp-controller="Events" asp-action="Details" asp-route-slug="@e.Slug" target="_blank" title="Önizle"><i class="bi bi-box-arrow-up-right"></i></a>
                                    <button type="button" class="btn btn-outline-danger" onclick="delEvt(@e.Id)" title="Sil"><i class="bi bi-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pager -->
    @if (totalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination pager justify-content-center flex-wrap gap-1">
                <li class="page-item @(page > 1 ? "" : "disabled")">
                    <a class="page-link" asp-route-page="@(page - 1)">Önceki</a>
                </li>
                @for (int p = 1; p <= totalPages; p++)
                {
                    <li class="page-item @(p == page ? "active" : "")">
                        <a class="page-link" asp-route-page="@p">@p</a>
                    </li>
                }
                <li class="page-item @(page < totalPages ? "" : "disabled")">
                    <a class="page-link" asp-route-page="@(page + 1)">Sonraki</a>
                </li>
            </ul>
        </nav>
    }
</div>

<form id="delForm" method="post" asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="delId" />
</form>
@section Scripts {
    <script>
        function delEvt(id){
            if(confirm('Bu etkinlik silinecek. Devam edilsin mi?')){
                document.getElementById('delId').value = id;
                document.getElementById('delForm').submit();
            }
        }
    </script>
}
