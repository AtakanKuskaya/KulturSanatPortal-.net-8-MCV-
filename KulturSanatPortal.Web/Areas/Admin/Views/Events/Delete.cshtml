@model KulturSanatPortal.Domain.Entities.Event
@{
    ViewData["Title"] = "Etkinliği Sil";
}
<div class="card-admin p-3">
    <h1 class="h5 mb-2">Etkinliği Sil</h1>
    <p class="text-muted">Aşağıdaki etkinliği silmek üzeresiniz. Bu işlem <strong>kapak</strong> ve <strong>galeri</strong> görsellerini de kaldırır.</p>
    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@TimeZoneInfo.ConvertTimeFromUtc(Model.StartUtc, TimeZoneInfo.Local):g</dd>
        <dt class="col-sm-2">Salon</dt>
        <dd class="col-sm-10">@Model.Venue?.Name</dd>
    </dl>
    <form method="post" asp-action="Delete" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Sil</button>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Vazgeç</a>
    </form>
</div>
