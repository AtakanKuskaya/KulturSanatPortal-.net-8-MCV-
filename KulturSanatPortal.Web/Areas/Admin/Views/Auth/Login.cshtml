@{
    Layout = null;
    var title = "Giriş Yap";
    var returnUrl = (string?)ViewBag.ReturnUrl ?? Context.Request.Query["returnUrl"].ToString();
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(1200px 600px at 8% -10%, #eef2ff 0%, transparent 60%), radial-gradient(900px 500px at 90% 0%, #e0f2fe 0%, transparent 60%), linear-gradient(180deg,#ffffff 0%,#f7f8fc 100%);
        }

        .login-card {
            max-width: 420px;
            margin: auto;
            border: 1px solid rgba(15,23,42,.1);
            border-radius: 16px;
            box-shadow: 0 10px 28px rgba(16,24,40,.12);
        }

        .brand {
            font-weight: 600
        }
    </style>
</head>
<body class="d-flex align-items-center py-5">
    <main class="container">
        <div class="login-card bg-white p-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="brand"><i class="bi bi-stars text-primary"></i> Yönetim</div>
                <a class="btn btn-sm btn-outline-secondary" href="/"><i class="bi bi-box-arrow-up-right"></i> Site</a>
            </div>

            @if (!string.IsNullOrWhiteSpace(ViewBag.Error as string))
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" asp-area="Admin" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@returnUrl">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Kullanıcı Adı</label>
                    <input name="username" class="form-control" autocomplete="username" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Şifre</label>
                    <input name="password" type="password" class="form-control" autocomplete="current-password" required />
                </div>
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <button class="btn btn-primary w-100" type="submit">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                </button>
            </form>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
