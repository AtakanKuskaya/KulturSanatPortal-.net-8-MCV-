@model KulturSanatPortal.Web.Areas.Admin.Models.NewsFormVM
@{
    ViewData["Title"] = "Haberi Düzenle";
    string HeroSrc() => string.IsNullOrWhiteSpace(Model.ExistingHero)
        ? "https://picsum.photos/seed/news/800/450"
        : Url.Content(Model.ExistingHero!);
}

<form method="post" enctype="multipart/form-data" class="card-admin p-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="form-grid">
                <div class="full">
                    <label class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div>
                    <label class="form-label">Slug</label>
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug" class="text-danger small"></span>
                </div>

                <div>
                    <label class="form-label">Yayın Tarihi</label>
                    <input asp-for="PublishedLocal" type="datetime-local" class="form-control" />
                </div>

                <div class="full">
                    <label class="form-label">Özet</label>
                    <input asp-for="Summary" class="form-control" />
                    <span asp-validation-for="Summary" class="text-danger small"></span>
                </div>

                <div class="full">
                    <label class="form-label">İçerik (HTML)</label>
                    <textarea asp-for="BodyHtml" rows="10" class="form-control"></textarea>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsPublished" />
                        <label class="form-check-label" asp-for="IsPublished">Yayınla</label>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Kaydet</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="uploader">
                <label class="form-label">Kapak Görseli</label>
                <div class="preview-hero mb-2">
                    <img id="heroPreview" src="@HeroSrc()" alt="Kapak" />
                </div>
                <input type="file" name="hero" accept=".jpg,.jpeg,.png,.webp,.avif" id="heroInput" />

                @if (!string.IsNullOrWhiteSpace(Model.ExistingHero))
                {
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" name="deleteHero" id="deleteHero">
                        <label class="form-check-label" for="deleteHero">Mevcut kapağı sil</label>
                    </div>
                }
                <div class="help mt-1">Önerilen oran 16:9 — Maks 8MB</div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>bindHeroPreview('heroInput','heroPreview');</script>
}
