@model KulturSanatPortal.Domain.Entities.News
@{
    ViewData["Title"] = "Haberi Sil";
}

<div class="card-admin p-3">
    <h1 class="h5 mb-2">Haberi Sil</h1>
    <p class="text-muted">Aşağıdaki haber silinecek. Onaylıyor musunuz?</p>

    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Slug</dt>
        <dd class="col-sm-10">@Model.Slug</dd>
        <dt class="col-sm-2">Yayın</dt>
        <dd class="col-sm-10">@Model.PublishedAtUtc.ToLocalTime():g</dd>
    </dl>

    <form method="post" asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Sil</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
    </form>
</div>
